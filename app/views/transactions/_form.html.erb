<div class="container">
  <%= form_with(model: transaction, local: true) do |form| %>
    <div class="form-group row">
      <%= form.label :Date, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :the_date, value: transaction.the_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :Type, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :the_type, value: transaction.the_type, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :Shop, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :shop, value: transaction.shop, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :Payer, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :payer, value: transaction.payer, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :Amonut, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :amount, value: transaction.amount, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :Purpose, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= form.select :purpose_id, options_from_collection_for_select(Purpose.all, 'id', 'the_name', transaction.most_possible_purpose), {}, {class: 'form-control'} %>
      </div>
    </div>  

    <div class="actions">
      <%= form.submit class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
