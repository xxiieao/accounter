<h1>History Transactions</h1>

<%= render "layouts/alter" %>

<div class="table-responsive">
  <table class="table table-striped table-sm text-center">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Shop</th>
        <th>Payer</th>
        <th>Amount</th>
        <th>Purpose</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.the_date %></td>
          <td><%= transaction.the_type %></td>
          <td><%= transaction.shop %></td>
          <td><%= transaction.payer %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.purpose_name %></td>
          <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= will_paginate @transactions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>